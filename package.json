{
  "name": "wordsvc",
  "version": "0.0.1",
  "description": "Word lookup service for Alpheios project",
  "main": "dist/alpheios-embedded.js",
  "directories": {
    "doc": "doc"
  },
  "scripts": {
    "test": "standard --fix && jest --coverage && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
    "build": "standard --fix && node --experimental-modules ./node_modules/alpheios-node-build/dist/build.mjs all all vue",
    "build-prod": "standard --fix && node --experimental-modules ./node_modules/alpheios-node-build/dist/build.mjs all production vue",
    "build-dev": "standard --fix && node --experimental-modules ./node_modules/alpheios-node-build/dist/build.mjs all development vue",
    "lint": "standard --fix",
    "dev": "npm run build && http-server -c-1 -p 8888 & onchange src -- npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alpheios-project/wordsvc.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/alpheios-project/wordsvc/issues"
  },
  "homepage": "https://github.com/alpheios-project/wordsvc#readme",
  "devDependencies": {
    "alpheios-components": "file:../components",
    "alpheios-data-models": "git://github.com/alpheios-project/data-models",
    "alpheios-experience": "git://github.com/alpheios-project/experience.git",
    "alpheios-inflection-tables": "git://github.com/alpheios-project/inflection-tables.git",
    "alpheios-lexicon-client": "file:../lexicon-client",
    "alpheios-morph-client": "file:../morph-client",
    "alpheios-node-build": "file:../node-build",
    "alpheios-res-client": "git://github.com/alpheios-project/res-client.git",
    "babel-jest": "^21.2.0",
    "babel-preset-es2015": "^6.24.1",
    "coveralls": "^3.0.0",
    "eslint": "^4.19.0",
    "eslint-plugin-import": "^2.11.0",
    "http-server": "^0.11.1",
    "intl-messageformat": "^2.2.0",
    "jest": "^22.4.3",
    "jest-fetch-mock": "1.3.3",
    "onchange": "^2.4.0",
    "standard": "^11.0.1"
  },
  "jest": {
    "verbose": true,
    "testEnvironment": "jest-environment-jsdom-11.0.0",
    "transform": {
      "^.+\\.htmlf$": "html-loader-jest",
      "^.+\\.jsx?$": "babel-jest"
    },
    "transformIgnorePatterns": [
      "node_modules/alpheios-components/"
    ]
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "node": true
    },
    "parserOptions": {
      "ecmaVersion": 2017,
      "sourceType": "module"
    }
  },
  "standard": {
    "ignore": [
      "**/dist",
      "**/support"
    ]
  },
  "dependencies": {
    "css-loader": "^0.28.11",
    "html-loader": "^0.5.5",
    "source-map-loader": "^0.2.3"
  }
}
